<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/sample_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sample Layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sample_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Sample Edit Text"
        app:layout_constraintEnd_toEndOf="@+id/sample_layout"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="@+id/sample_layout"
        app:layout_constraintTop_toBottomOf="@+id/sample_layout" />

    <Button
        android:id="@+id/sample_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Sample Recyclerview"
        app:layout_constraintEnd_toEndOf="@+id/sample_edit_text"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/sample_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/sample_edit_text" />

    <Button
        android:id="@+id/sample_bottom_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Sample Bottom Navgigation"
        app:layout_constraintEnd_toEndOf="@+id/sample_fragments"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/sample_fragments"
        app:layout_constraintTop_toBottomOf="@+id/sample_fragments" />

    <Button
        android:id="@+id/sample_fragments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Sample fragments"
        app:layout_constraintEnd_toEndOf="@+id/sample_recyclerview"
        app:layout_constraintStart_toStartOf="@+id/sample_recyclerview"
        app:layout_constraintTop_toBottomOf="@+id/sample_recyclerview" />

    <Button
        android:id="@+id/sample_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Sample Room Database"
        app:layout_constraintEnd_toEndOf="@+id/sample_bottom_nav"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/sample_bottom_nav"
        app:layout_constraintTop_toBottomOf="@+id/sample_bottom_nav" />

    <Button
        android:id="@+id/capture_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Sample Embed Capture "
        app:layout_constraintEnd_toEndOf="@+id/sample_room"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sample_room"
        app:layout_constraintTop_toBottomOf="@+id/sample_room" />

    <Button
        android:id="@+id/samplePackageManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Sample PackageManager"
        app:layout_constraintEnd_toEndOf="@+id/capture_photo"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/capture_photo"
        app:layout_constraintTop_toBottomOf="@+id/capture_photo" />

    <TextView
        android:id="@+id/testview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/samplePackageManager"
        app:layout_constraintStart_toStartOf="@+id/samplePackageManager"
        app:layout_constraintTop_toBottomOf="@+id/samplePackageManager" />


</androidx.constraintlayout.widget.ConstraintLayout>